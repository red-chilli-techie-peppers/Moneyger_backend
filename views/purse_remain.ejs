
  <%- include("partials/header.ejs") -%>
   

<body id="body" style="background-color:white">
    <div class="flex justify-center pt-10">
        <div class="block p-6 rounded-lg shadow-2xl bg-slate-50 max-w-sm" style="background-color:#f4f6f7;" id="card">
            <div class="flex justify-end">
                <button type="button" class=" inline-block px-10 py-2.5  bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out">MONEYGER</button>
                </div>
                <div class="bg-slate-50 h-4" style="background-color:#f4f6f7;" id="card1"></div>
          <h5 class="text-gray-900 text-xl leading-tight font-medium mb-2" style="color:black" id="w1"> Your Amount Remaining</h5>
          <p class="text-gray-700 text-base mb-4 pt-4"  style="color:black" id="w2">
            <%= amt%>
            </p>
        <div class="bg-slate-50 h-4" style="background-color:#f4f6f7;" id="card2"></div>
        <div class="flex justify-around space-x-2">
            
          <button type="submit" class=" inline-block px-10 py-1  bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded
           shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none
            focus:ring-0 active:bg-blue-800 active:shadow-lg transition
             duration-150 ease-in-out"><a href="/add">Add some more expense</a></button>
         
          <button type="button" class=" inline-block px-10 py-1  bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg 
          focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg
           transition duration-150 ease-in-out"> <a href="/details">Details of your expenses</a></button>
        </div>
      </div></div>
      <br>
      <div class="flex justify-center">
        <button type="submit" id="b1" class=" inline-block px-10 py-2.5  bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out">Turn on Dark Mode</button> 
      </div> 
      <br>
      <script>
           var body=document.querySelector("#body");
     var b1=document.querySelector("#b1");
     var b1t=document.getElementById('b1');
     var card=document.querySelector("#card");
     var card1=document.querySelector("#card1");
     var card2=document.querySelector("#card2");
     var w1=document.querySelector("#w1");
     var w2=document.querySelector("#w2");
     b1.addEventListener('click',buttonclick);
     function buttonclick(e){
       if(body.style.backgroundColor=="white"){
        body.style.backgroundColor="black";
        w1.style.color="white";
        w2.style.color="white";
        card.style.backgroundColor="#383838";
        card1.style.backgroundColor="#383838";
        card2.style.backgroundColor="#383838";
        b1t.innerHTML="Turn off Dark Mode";
       }
       else if(body.style.backgroundColor=="black"){
        body.style.backgroundColor="white";
        card.style.backgroundColor="#f4f6f7";
        card1.style.backgroundColor="#f4f6f7";
        card2.style.backgroundColor="#f4f6f7";
        w1.style.color="black";
        w2.style.color="black";
        b1t.innerHTML="Turn on Dark Mode";
       }
     }
      </script>
</body>
</html>